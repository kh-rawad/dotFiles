alias ls="ls --color" \
	la="ls -A" \
	ll="ls -l" \
	lll="ls -la" \
	#alias l='ls -CF'


alias vis="sudo vi"
alias ping="ping -c3"
alias ctl="sudo systemctl"
alias mkdir='mkdir -p'
alias h='history'
alias hl='history | less'
alias hs='history | grep'
alias hsi='history | grep -i'
alias j='jobs -l'
alias which='type -a'
alias ..='cd ..'
alias du='du -kh'    # Makes a more readable output.
alias df='df -kTh'
alias suod='sudo'    # personal issue
alias fuk='sudo $(history -p !!)'

# Alias to create a tmux session with the current folder name if it does not exist
alias tn='tmux new-session -A -s $(basename "$PWD")'
